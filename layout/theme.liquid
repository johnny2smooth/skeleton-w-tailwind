<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {{ 'tailwind.css' | asset_url | stylesheet_tag }}
    <script type="module" src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@latest/dist/turbo.es2017-esm.min.js"></script>
    <script src="https://unpkg.com/@hotwired/stimulus/dist/stimulus.umd.js"></script>
    <script type="module" src="{{ 'stimulus-init.js' | asset_url }}"></script>
    <meta name="view-transition" content="same-origin" />
  </head>

  <body class="flex">
    <aside class="h-screen px-2 py-8 sticky top-0">
      {% render 'sidebar' %}
    </aside>
    <main class="py-8">
      {{ content_for_layout }}
      {% sections 'footer-group' %}
    </main>
  </body>
</html>
