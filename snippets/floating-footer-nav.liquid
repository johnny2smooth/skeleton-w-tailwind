{%- comment -%}
Floating footer nav: panel pops out above the menu button.
Requires controller: footer-nav (assets/footer_nav_controller.js)
{%- endcomment -%}

<div data-controller="footer-nav" >
  <div class="fixed inset-x-0 bottom-0 z-[60] py-2 px-12">
    <div
      id="footer-nav-panel"
      data-footer-nav-target="panel"
      class="mx-4 my-4 flex justify-center overflow-hidden rounded-xl  bg-white shadow-md opacity-0 translate-y-1 transition-[opacity,transform] duration-200 ease-out"
      style="height:0"
      role="region"
      aria-labelledby="footer-nav-label"
      aria-hidden="true"
    >
      <div data-footer-nav-target="content" class="p-4">
        <h2 id="footer-nav-label" class="sr-only">Footer menu</h2>
        <ul class="space-y-2 text-sm">
          <li><a href="#" class="underline">hello</a></li>
          <li><a href="#" class="underline">hello</a></li>
          <li><a href="#" class="underline">hello</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="fixed inset-x-0 bottom-6 z-50 "
    style="view-transition-name: floting-nav"
    >
    <div class="mx-4 my-4 flex w-screen justify-center px-12">
      <button
        type="button"
        data-footer-nav-target="button"
        data-action="click->footer-nav#toggle"
        aria-controls="footer-nav-panel"
        aria-expanded="false"
        style="view-transition-name: floting-nav"
        class="rounded-lg border w-screen bg-white opacity-25 px-4 py-2 text-sm transition hover:bg-black hover:text-white"
      >
        Menu
      </button>
    </div>
  </div>
</div>
