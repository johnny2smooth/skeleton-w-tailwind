<div id="product-info" class="self-end product-info w-64 p-4 grow rounded-xl shadow-md/30 font-mono flex flex-col justify-end gap-4">
    <details>
      <summary class="text-xs">Details</summary>
      <div id="description">
        {{ product.description }}
      </div>
    </details>
    <div class="flex flex-col gap-2">
      <h1 class="text-sm">{{ product.vendor }}</h1>
      <p style="view-transition-name: {{product.title | handleize}}">{{ product.title }}</p>
      <p style="view-transition-name: {{product.title | handleize}}-price"class="text-sm">{{ product.price | money }}</p>
    </div>
    <div class="product-form flex flex-col gap-4">
      {% form 'product', product %}
        {% assign current_variant = product.selected_or_first_available_variant %}

        <select name="id">
          {% for variant in product.variants %}
            <option
              value="{{ variant.id }}"
              {% if variant == current_variant %}
                selected="selected"
              {% endif %}
            >
              size?
            </option>
          {% endfor %}
        </select>

        <!-- 
        <input type="text" name="quantity" min="1" value="1">
        -->

        <input type="submit" value="Add to cart" class="text-red-700">
        {{ form | payment_button }}
      {% endform %}
    </div>
</div>

<style>
#description {
  padding-top: 2rem;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
</style>
